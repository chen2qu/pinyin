				<ContentView Padding="50,10,50,10" BackgroundColor="White" >
					<!-- <Image x:Name="imgQRCode" Source="QRCodeDuPinYin.png"  Aspect="AspectFit" HorizontalOptions="EndAndExpand" /> -->
