	<ContentPage.Content>
		<StackLayout Margin="0,0,0,0" Padding="0,0,0,0" BackgroundColor="White" >

			<!-- <ScrollView BackgroundColor="White" >  -->

				<ContentView Padding="10,10,0,0" BackgroundColor="White" >
